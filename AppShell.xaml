<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ExpenseTracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ExpenseTracker.Views">

    <TabBar>
        <ShellContent
            Title="Dashboard"
            ContentTemplate="{DataTemplate views:DashboardPage}" />
        <ShellContent
            Title="Transactions"
            ContentTemplate="{DataTemplate views:TransactionsPage}" />
         <ShellContent
             Title="Goals"
                ContentTemplate="{DataTemplate views:GoalsPage}" />
        <ShellContent
            Title="Schedule"
            ContentTemplate="{DataTemplate views:SchedulePage}" />
        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate views:SettingsPage}" />
    </TabBar>

</Shell>
