<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ExpenseTracker.Views.AddEditTransactionPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="16">

            <Label x:Name="TitleLabel"
                   Text="Add Transaction"
                   FontSize="24"
                   FontAttributes="Bold" />

            <Grid ColumnDefinitions="*,*"
                  ColumnSpacing="12">
                <Button x:Name="ExpenseButton"
                        Text="Expense"
                        Clicked="OnExpenseClicked"
                        BackgroundColor="#F44336"
                        TextColor="White" />
                <Button x:Name="IncomeButton"
                        Grid.Column="1"
                        Text="Income"
                        Clicked="OnIncomeClicked"
                        BackgroundColor="#E0E0E0" />
            </Grid>

            <Entry x:Name="AmountEntry"
                   Placeholder="Amount"
                   Keyboard="Numeric" />

            <Picker x:Name="CategoryPicker"
                    Title="Category" />

            <DatePicker x:Name="DatePicker"/>

            <Editor x:Name="NoteEditor"
                    Placeholder="Note (optional)"
                    AutoSize="TextChanges"
                    HeightRequest="80" />

            <Label x:Name="ErrorLabel"
                   TextColor="Red"
                   IsVisible="False" />

            <Grid ColumnDefinitions="*,*"
                  ColumnSpacing="12">
                <Button Text="Cancel"
                        Grid.Column="0"
                        Clicked="OnCancelClicked" />
                <Button Text="Save"
                        Grid.Column="1"
                        Clicked="OnSaveClicked" />
                
            </Grid>
            
            <Button x:Name="DeleteButton"
                    Text="Delete Transaction"
                    Clicked="OnDeleteTransaction"
                    BackgroundColor="#F44336"
                    TextColor="White" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
